{
  "name": "spell-checker",
  "description": "Tips to Improve Your Spelling",
  "version": "1.0.3",
  "main": "dist/index.js",
  "files": [
    "dist",
    "data",
    "action.yml"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint 'src/**/*.{js,ts}?(x)' --fix",
    "dev": "act -W act.yml --eventpath event.json -r --use-gitignore=false -P ubuntu-latest=catthehacker/ubuntu:act-latest",
    "build:data": "rimraf data && mkdir data && cp ./node_modules/markdown-spellcheck/data/* ./data",
    "build:dist": "ncc build src/index.ts --minify --v8-cache",
    "build": "run-p build:*",
    "prebuild": "run-s clean",
    "prepare": "is-ci || husky install .husky"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "pretty-quick â€” staged"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "license": "MIT",
  "author": {
    "name": "bubkoo",
    "email": "bubkoo.wy@gmail.com"
  },
  "repository": "https://github.com/wow-actions/spell-checker",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@types/minimatch": "^5.1.2",
    "@wow-actions/parse-inputs": "^1.2.0",
    "alex": "^11.0.0",
    "markdown-spellcheck": "^1.3.1",
    "minimatch": "^5.1.1",
    "spellchecker": "^3.7.1",
    "write-good": "^1.0.8"
  },
  "devDependencies": {
    "@bubkoo/commitlint-config": "^1.0.1",
    "@bubkoo/eslint-config": "^1.3.0",
    "@bubkoo/tsconfig": "^1.1.0",
    "@types/node": "^18.11.15",
    "@types/spellchecker": "^3.5.0",
    "@types/write-good": "^1.0.1",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^8.29.0",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  }
}
